<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@drawable/top_background"
        >

        <TextView
            android:id="@+id/title"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIODATA"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="13pt"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/card_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@color/white"
        android:layout_marginTop="-70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginTop="80dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aditya Ristanto Mukti"
                android:textSize="10pt"
                android:textColor="@color/greendark"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginTop="15dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022340001"
                android:textSize="10pt"
                android:textColor="@color/greendark"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginTop="15dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekayasa Perangkat Lunak"
                android:textSize="10pt"
                android:textColor="@color/greendark"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umur"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginTop="15dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 Thn"
                android:textSize="10pt"
                android:textColor="@color/greendark"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobi"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:layout_marginTop="15dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiduran"
                android:textSize="10pt"
                android:textColor="@color/greendark"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                >

            </TextView>
        </LinearLayout>
        <Button
            android:id="@+id/button_toast"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/toast_button_riiple"
            android:text="Click Button"
            android:textColor="@color/white"
            android:layout_gravity="center">

        </Button>

    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-138dp"
        android:layout_marginBottom="60dp"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/button_loading_white" />
    <LinearLayout
        android:id="@+id/sosial_media"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/instagram_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:background="@drawable/profile_layout">

            <ImageView
                android:id="@+id/ig"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/instagram"/>

        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_ig"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/button_loading_blue"
            app:lottie_autoPlay="false"
            android:visibility="invisible"
            app:lottie_loop="true"
            android:layout_marginLeft="-60dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/profile_layout">

            <ImageView
                android:id="@+id/fb_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/facebook"/>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_fb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/button_loading_blue"
            app:lottie_autoPlay="false"
            android:visibility="invisible"
            app:lottie_loop="true"
            android:layout_marginLeft="-60dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:id="@+id/gmail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/profile_layout">

            <ImageView
                android:id="@+id/gmail_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gmail"/>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_gmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/button_loading_blue"
            app:lottie_autoPlay="false"
            android:visibility="invisible"
            app:lottie_loop="true"
            android:layout_marginLeft="-55dp"
            android:layout_marginRight="13dp"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/profile_layout"
        android:visibility="invisible"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="-575dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_layout"
            >

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/profile">

            </ImageView>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>